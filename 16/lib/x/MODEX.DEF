TRUE            EQU     1       ; Boolean constants
FALSE           EQU     0

USE286  = FALSE                  ; TRUE enables 80286 instructions
USE386  = FALSE                  ; TRUE enables 80386 (and 80286) instructions

IF USE286 EQ TRUE
        P286
ENDIF

IF USE386 EQ TRUE
        P386
        USE286  = TRUE
ENDIF

MXVERSION       EQU     0128h   ; Library version (1.40)

